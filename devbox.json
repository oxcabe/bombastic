{
  "packages": [
    "bun@1.0.24",
    "trunk-io@1.2.7"
  ],
  "shell": {
    "init_hook": [
      "bun install",
      "trunk install"
    ],
    "scripts": {
      "test": [
        "devbox run test-unit"
      ],
      "test-unit": [
        "bun test unit"
      ],
      "build": [
        "bun run build"
      ],
      "build-cli": [
        "bun run build:cli"
      ],
      "build-lib": [
        "bun run build:bundle"
      ]
    }
  }
}
